<script>
  $(function () {
    $("#example1").DataTable({
      "responsive": true, "lengthChange": false, "autoWidth": false,
      "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
    }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
    $('#example2').DataTable({
      "paging": true,
      "lengthChange": false,
      "searching": false,
      "ordering": true,
      "info": true,
      "autoWidth": false,
      "responsive": true,
    });
    $('#btn-add-category').click(function () {

      swal("Write new category name: ", {
        content: "input",
        buttons: true,
      })
        .then((value) => {
          if (value) {
            addCategory(value);

          }
        });

    });
    async function addCategory(data) {
      try {
        var url_origin = location.origin;
        const response = await fetch(url_origin + "/category/add-product-category/" + data, {
          method: "POST",
        });
        const result = await response.json();
        if (result.status) {
          swal({
            title: "Good job!",
            text: "You added category success !!!",
            icon: "success",
            button: false,
            timer: 3000,
          });
        } else {
          swal({
            title: " Fail!",
            text: result.message,
            icon: "error",
            button: false,
            timer: 3000,
          });
        }
        location.reload();
        console.log("Success:", result);
      } catch (error) {
        console.log("Error:", error);
      }
    }

   

  });
</script>
<script>
    function editCategory(id) {
      swal("Write new category name: ", {
        content: "input",
        buttons: true,
      })
        .then((value) => {
          if (value) {
            edit(id, value);

          }
        });
    }
    async function edit(id, name) {
      try {
        var url_origin = location.origin;
        const response = await fetch(url_origin + "/category/edit-product-category/" + id + "/" + name, {
          method: "POST",
        });
        const result = await response.json();
        if (result.status) {
          swal({
            title: "Good job!",
            text: "You edit category success !!!",
            icon: "success",
            button: false,
            timer: 3000,
          });
        } else {
          swal({
            title: " Fail!",
            text: result.message,
            icon: "error",
            button: false,
            timer: 3000,
          });
        }
        location.reload();
        console.log("Success:", result);
      } catch (error) {
        console.log("Error:", error);
      }
    }
</script>